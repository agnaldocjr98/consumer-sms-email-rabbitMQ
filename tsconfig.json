{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "outDir": "build",
        "removeComments": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDirs": [
            "src"
        ],
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    }
}